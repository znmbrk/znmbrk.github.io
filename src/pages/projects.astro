---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Projects - Zain Mobarik">
  <!-- Header Section -->
  <header class="mb-16">
    <div class="flex items-center mb-6">
      <div class="w-16 h-16 bg-purple-50 rounded-2xl flex items-center justify-center mr-4">
        <span class="text-3xl">üíº</span>
      </div>
      <div>
        <h1 class="text-4xl font-bold text-gray-900 tracking-tight">Projects</h1>
        <p class="text-lg text-gray-600 mt-1">
          A showcase of what I've built, contributed to, and written.
        </p>
      </div>
    </div>
  </header>

  <!-- Featured Project -->
  <section class="mb-16">
    <div class="bg-gradient-to-br from-purple-50 via-blue-50 to-indigo-50 rounded-3xl p-8 md:p-12 relative overflow-hidden">
      <div class="relative z-10">
        <div class="flex items-start justify-between mb-6">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Featured Project</h2>
            <h3 class="text-2xl font-semibold text-gray-800">Personal Website</h3>
          </div>
          <div class="w-12 h-12 bg-white bg-opacity-80 rounded-2xl flex items-center justify-center">
            <span class="text-2xl">‚ú®</span>
          </div>
        </div>

        <p class="text-lg text-gray-700 mb-6 leading-relaxed max-w-2xl">
          A modern, minimalist personal website built with Astro and Tailwind CSS. Features a clean design,
          responsive layout, and optimized performance.
        </p>

        <div class="flex flex-wrap gap-2 mb-6">
          <span class="px-4 py-2 bg-white bg-opacity-80 text-purple-700 font-medium rounded-full">Astro</span>
          <span class="px-4 py-2 bg-white bg-opacity-80 text-blue-700 font-medium rounded-full">Tailwind CSS</span>
          <span class="px-4 py-2 bg-white bg-opacity-80 text-indigo-700 font-medium rounded-full">TypeScript</span>
        </div>

        <div class="flex space-x-4">
          <a href="https://github.com/yourusername/personal-website"
             class="bg-white text-gray-900 px-6 py-3 rounded-xl font-medium hover:shadow-lg transition-all"
             target="_blank" rel="noopener noreferrer">
            View on GitHub ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Projects -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 mb-8">Other Projects</h2>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Project 1 -->
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow group">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
            <a href="https://github.com/yourusername/project1" target="_blank" rel="noopener noreferrer">
              Project Name 1
            </a>
          </h3>
          <div class="w-10 h-10 bg-blue-50 rounded-xl flex items-center justify-center">
            <span class="text-lg">üöÄ</span>
          </div>
        </div>

        <p class="text-gray-600 mb-4 leading-relaxed">
          A brief description of what this project does, the technologies used, and why it was built.
        </p>

        <div class="flex flex-wrap gap-2 mb-4">
          <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full">React</span>
          <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full">TypeScript</span>
          <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full">Node.js</span>
