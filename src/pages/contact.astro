---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Zain Mobarik">
  <!-- Header Section -->
  <header class="mb-16">
    <div class="flex items-center mb-6">
      <div class="w-16 h-16 bg-orange-50 rounded-2xl flex items-center justify-center mr-4">
        <span class="text-3xl">📧</span>
      </div>
      <div>
        <h1 class="text-4xl font-bold text-gray-900 tracking-tight">Contact</h1>
        <p class="text-lg text-gray-600 mt-1">
          Let's chat! Always down to meet interesting folk.
        </p>
      </div>
    </div>
  </header>

  <div class="max-w-4xl space-y-12">
    <!-- Primary Contact -->
    <section class="bg-gradient-to-r from-orange-50 to-red-50 rounded-2xl p-8">
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mr-4">
          <span class="text-2xl">✉️</span>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Get in Touch</h2>
          <p class="text-gray-600 mt-1">Best way to reach me directly</p>
        </div>
      </div>

      <div class="bg-white bg-opacity-60 rounded-xl p-6">
        <a href="mailto:zainmobarik03@gmail.com"
           class="text-2xl font-semibold text-gray-900 hover:text-orange-600 transition-colors">
          zainmobarik03@gmail.com
        </a>
        <p class="text-gray-600 mt-2">
          I usually respond within 24-48 hours. Feel free to reach out about anything!
        </p>
      </div>
    </section>

    <!-- Social Links -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Find Me Online</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="https://twitter.com/zainmbrk"
           target="_blank"
           rel="noopener noreferrer"
           class="group bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-100 transition-colors">
              <span class="text-2xl">🐦</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">Twitter</h3>
              <p class="text-sm text-gray-500">@zainmbrk</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm">
            Quick thoughts, updates, and conversations about tech and startups.
          </p>
        </a>

        <a href="https://linkedin.com/in/zainmobarik"
           target="_blank"
           rel="noopener noreferrer"
           class="group bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-100 transition-colors">
              <span class="text-2xl">💼</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">LinkedIn</h3>
              <p class="text-sm text-gray-500">zainmobarik</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm">
            Professional updates and connections. Let's build something together.
          </p>
        </a>

        <a href="https://github.com/znmbrk"
           target="_blank"
           rel="noopener noreferrer"
           class="group bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-all hover:-translate-y-1">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-gray-50 rounded-xl flex items-center justify-center mr-4 group-hover:bg-gray-100 transition-colors">
              <span class="text-2xl">💻</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 group-hover:text-gray-700 transition-colors">GitHub</h3>
              <p class="text-sm text-gray-500">znmbrk</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm">
            Code, projects, and open source contributions.
          </p>
        </a>
      </div>
    </section>

    <!-- Current Status -->
    <section class="bg-gray-900 rounded-2xl p-8 text-white">
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-white bg-opacity-10 rounded-xl flex items-center justify-center mr-4">
          <span class="text-2xl">🌟</span>
        </div>
        <div>
          <h2 class="text-2xl font-bold mb-1">What I'm Up To</h2>
          <p class="text-gray-300">
            Current focus and what's keeping me busy
          </p>
        </div>
      </div>

      <div class="bg-white bg-opacity-5 rounded-xl p-6">
        <div class="flex items-center mb-4">
          <span class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></span>
          <span class="text-gray-300 text-sm font-medium">Currently Active</span>
        </div>
        <p class="text-lg text-white leading-relaxed">
          Currently trying to figure out life and trying to become a morning person.
          Also diving deep into startup operations and product strategy at incident.io.
        </p>
      </div>
    </section>
  </div>

  <!-- Navigation -->
  <nav class="mt-16 pt-8 border-t border-gray-200">
    <a href="/" class="inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors group">
      <span class="mr-2 group-hover:-translate-x-1 transition-transform">←</span>
      Back to home
    </a>
  </nav>
</Layout>