---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Zain Mobarik - Personal Website" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <footer style="margin-top: 60px; padding-top: 40px; border-top: 1px solid #ddd; text-align: left; color: #666;">
      <p style="font-size: 14px;">
        <a href="https://cal.com/zain-mobarik-4tdyos/website" target="_blank" style="color: #0000EE; text-decoration: underline;">Say hi</a>.
      </p>
    </footer>
  </body>
</html>